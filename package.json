{
  "name": "boxbackend",
  "version": "1.0.0",
  "description": "Software para la liga de boxeo de norte de santander",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon",
    "check": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "build": "npm run check && npm run lint && npm run lint:fix && tsc"
  },
  "nodemonConfig": {
    "ext": "ts,yaml",
    "events": {
      "restart": "clear",
      "start": "clear"
    },
    "exec": "ts-node -r ./src/app.ts"
  },
  "author": "Jose David Castillo Buitrago",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.20",
    "@types/node": "^20.8.10",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.52.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-import-newlines": "^1.3.4",
    "eslint-plugin-n": "^16.2.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-punctuation": "^0.0.3",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@types/luxon": "^3.3.3",
    "@types/winston": "^2.4.4",
    "clear": "^0.1.0",
    "express": "^4.18.2",
    "luxon": "^3.4.3",
    "winston": "^3.11.0"
  }
}