{
  "compilerOptions": {
    "target": "ES6",                // El nivel de ECMAScript que se generará
    "module": "CommonJS",           // El sistema de módulos a utilizar (puedes usar "ES6" si estás en un entorno moderno)
    "outDir": "./dist",             // La carpeta de salida para los archivos generados
    "rootDir": "./src",             // La carpeta que contiene tu código fuente TypeScript
    "strict": true,
    "noImplicitAny": false,                 // Habilita estrictas revisiones de tipo
    "esModuleInterop": true         // Permite la interoperabilidad entre CommonJS y ES6
  },
  "include": [
    "src/**/*.ts"                  // Patrón para incluir los archivos TypeScript
  ],
  "exclude": [
    "node_modules"                // Directorios o archivos que deben excluirse de la compilación
  ],
  "typeRoots": [
    "./src/types"  // Directorio personalizado para archivos .d.ts
  ]
}
